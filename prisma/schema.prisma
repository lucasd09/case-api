// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  relationMode      = "prisma"
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  case     Case?
}

model Case {
  id        Int         @id @default(autoincrement())
  name      String
  bio       String
  portfolio Portfolio[]
  user      User        @relation(fields: [userId], references: [id])
  userId    Int         @unique
}

model Portfolio {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  image       String
  link        String
  case        Case?  @relation(fields: [caseId], references: [id])
  caseId      Int?

  @@index([caseId])
}
